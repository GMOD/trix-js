{
  "version": "3.0.4",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "module": "esm/index.js",
  "files": [
    "dist",
    "esm",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
    "prebuild": "rimraf dist esm",
    "build:esm": "tsc --target esnext --outDir esm",
    "build:es5": "tsc --target es2015 --outDir dist --module commonjs",
    "build": "yarn build:esm && yarn build:es5",
    "preversion": "yarn lint && yarn test --run && yarn build",
    "postbuild:es5": "echo '{\"type\": \"commonjs\"}' > dist/package.json",
    "postversion": "git push --follow-tags",
    "test": "vitest"
  },
  "name": "@gmod/trix",
  "author": "Matt Morgan",
  "repository": "GMOD/trix-js",
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unicorn": "^62.0.0",
    "generic-filehandle2": "^2.0.5",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.4.0",
    "vitest": "^4.0.6"
  },
  "publishConfig": {
    "access": "public"
  }
}
